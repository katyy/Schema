        <Grid Height="500" Width="500" x:Name="tableGrid">
            <Grid.Resources>
                <local:ActiveConverter x:Key="activeConverter"/>
                <DataTemplate DataType="{x:Type Table:SampleVertex}">
                    <Border  Background="{Binding Path=Active, Converter={StaticResource activeConverter}, NotifyOnTargetUpdated=True}"
					BorderBrush="LightGray" 
					BorderThickness="1,1,1,1"
					CornerRadius="10,10,10,10"
					Padding="10,10,10,10"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Cursor="Hand">
                        <Border.ContextMenu>
                            <ContextMenu>
                            <MenuItem x:Name="Change" Click="MenuItem_Click" Tag="{Binding}">
                                    <MenuItem.Header>
                                    <TextBlock HorizontalAlignment="Left"> Change</TextBlock>
                                    </MenuItem.Header>
                                </MenuItem>
                                <MenuItem x:Name="Properties" Click="MenuItem_Click" Tag="{Binding}">
                                    <MenuItem.Header>
                                        <TextBlock HorizontalAlignment="Left">Properties</TextBlock>
                                    </MenuItem.Header>
                                </MenuItem>
                            </ContextMenu>
                        </Border.ContextMenu>
                        <Border.ToolTip>
                            <ToolTip>
                                <TextBlock Text="{Binding Text}" />
                            </ToolTip>
                        </Border.ToolTip>
                        <TextBlock Text="{Binding Text}" TextAlignment="Center" TextWrapping="Wrap" />
                    </Border>
                </DataTemplate>
            </Grid.Resources>
     

              <zoom:ZoomControl Name="zoomControl" >
                <graphsharp:GraphLayout x:Name="graphLayout"
                                    Graph="{Binding Path=Graph}"
                                    LayoutAlgorithmType="{Binding Path=LayoutAlgorithm}"
                                    OverlapRemovalAlgorithmType="FSA" />
            </zoom:ZoomControl>
        </Grid>
    </Grid>
